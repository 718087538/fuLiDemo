/* pages/index/event.wxss */
.eventList {
  padding: 10rpx 20rpx 30rpx 64rpx;
  color: #333;
  border-bottom: 2rpx solid #ececec;
}

.eventList .title {
  font-size: 36rpx;
}

.info {
  display: flex;
  align-items: center;
  margin-left: -60rpx;
}

.info image {
  border: 1px solid #e6e7e7;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
}

.info view {
  font-size: 30rpx;
  margin-left: 14rpx;
  font-weight: bold;
  color: rgb(24, 88, 148);
}

.date {
  font-size: 30rpx;
  color: #555;
  margin: 10rpx 0
}

.imgBox {
  display: flex;
  flex-wrap: wrap;
}

.imgBox image {
  width: 215rpx;
  height: 215rpx;
  display: block;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.imgBoxOne image {
  width: 280rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.imgBoxFour{
  display: flex;
  flex-wrap: wrap;
}
.imgBoxFour image{
  width:280rpx;
  margin-top: 10rpx;
  height: 280rpx;
}
.imgBoxFour image:nth-child(2n+2){
  margin-left: 10rpx;
}
.imgBox image:nth-child(3n+3) {
  margin-right: 0;
}

.bottomNav {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}

.bottomNav .item {
  text-align: center;
}