.giftShow {
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
}

.giftShow .giftIt {
  width:100%;
  margin-top: 30rpx;
  padding: 0 10rpx;
  background-color: rgb(247, 247, 247);
  border-radius: 10rpx;
  display: flex;
}
.giftIt .right{
  flex:1;
  padding-left:10px
}
.giftIt .right .price{
  font-size: 16px;
}

.giftShow .giftIt .title {
  font-size: 32rpx;
  margin-top: 30rpx;
  overflow:hidden; 
text-overflow:ellipsis;
display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:2; 
}
.giftShow .giftIt .goinfo{
  background-color: rgb(67, 129, 223);
 width: 250rpx;
 height: 50rpx;
 margin: 10rpx auto 0;
 border-radius: 30rpx;
 padding: 10rpx 0;
 color: #fff;
}

.giftShow .giftIt image {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin: 10rpx auto;
  display: block;
}

