<!--index.wxml-->
<view class="container">
	<view class="page-body">
		<view class="page-section page-section-spacing swiper">
			<swiper circular="true" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
				<block wx:for="{{swiperList}}" wx:key="*this">
					<swiper-item>
						<view class="swiper-item {{item}}">
							<image src="{{item.imgSrc}}"></image>
						</view>
					</swiper-item>
				</block>
			</swiper>
		</view>
	</view>
<i-notice-bar icon="systemprompt" loop speed="{{playNoticeSpeed}}">
		<view  class="notice"  wx:for="{{noticeList}}" wx:key="index">通知{{index+1}}：{{item.content}}；</view>
</i-notice-bar>
	<view class="middleBanner">
	<navigator class="a" url="../jiFen/jifen">
		<image src="../../static/banner/banner_min.png"></image>
	</navigator>
	</view>

	<view class="giftShow">
		<view class="giftIt" wx:for="{{giftList}}" wx:key="*this">
			<image src="{{item.goodsImg}}"></image>
			<text class="title">{{item.title}}</text>
			<navigator class="goinfo" url="../giftInfo/index?goodsId={{item._id}}">查看详情</navigator>
		</view>
	</view>
	<i-toast id="toast" />
</view>
<view class="stand"></view>
