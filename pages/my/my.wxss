/* pages/my/my.wxss */
.myInfo{
  margin: 10rpx 20rpx;
  height: 360rpx;
  overflow: hidden;
  border-radius: 6rpx;
  padding: 0 20rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.myInfo .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.myInfo .headImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.myInfo .name{
  margin-left: 20rpx;
  color: #333;
  flex:1
}
.li{
  width: 100%;
  display: flex;
  align-items: center;
}
.li image{
  width: 100rpx;
  height: 100rpx;
}
.li .title{
  margin-left: 20rpx;
  flex:1;
}
.li .num{
  color: #515151;
}
.li .waitSend{
  color: #888;
}
.li .card{
  width: 100%;
}
.li .copyOrderBtn{
  width:100rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0;
}
.noOrder .noOrderImg{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 60rpx auto 30rpx;
}