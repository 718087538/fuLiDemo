/* pages/my/my.wxss */
.headImgBox{
  border-radius: 50%;
  overflow: hidden;
  width: 130rpx;
  height: 130rpx;
}
.myInfo{
  margin: 10rpx 20rpx;
  height: 360rpx;
  overflow: hidden;
  border-radius: 14rpx;
  padding: 0 20rpx;
 
  position: relative;
  display: flex;
  
  align-items: center;
}
.myInfo .bg{
  width: 100%;
  height: 100%;
  position: absolute;

  top: 0;
  left: 0;
  z-index: -1;
}
.myInfo .headImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.myInfo .name{
  margin-left: 20rpx;
  color: #fff;
  flex:1
}
.navBox{
  display: flex;
  font-size: 14px;
  height: 60px;
  padding: 6px 0 4rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
  background: rgb(227, 230, 228);
  justify-content: space-around;
  color: #333;
}
.navBox image{
  width: 70rpx;
  height: 70rpx;
}
.navItem{
  width: 90rpx;
  height: 90rpx;
  text-align: center;
}
.navList {
  display: flex;
  font-size: 14px;
  justify-content: space-around;
  height: 60px;
  padding: 6px 0 4rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  color: #333;
}
.navList image{
    width: 70rpx;
    height: 70rpx;
  }
.navList .navItem{
  width: 140rpx;
  height: 90rpx;
  text-align: center;
}