/* pages/my/my.wxss */
.myInfo{
  margin: 10rpx 20rpx;
  height: 360rpx;
  overflow: hidden;
  border-radius: 6rpx;
  padding: 0 20rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.myInfo .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.myInfo .headImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.myInfo .name{
  margin-left: 20rpx;
  color: #333;
}