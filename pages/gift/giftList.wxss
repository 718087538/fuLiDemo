/* pages/gift/giftList.wxss */
.li{
  width: 100%;
  display: flex;
  overflow: hidden;
  align-items: center;
}
.li image{
  width: 220rpx;
  height: 220rpx;
}
.li .title{
  margin-left: 20rpx;
  height: 200rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.li .title .theTitle{
  font-size: 32rpx;
  overflow: hidden;

text-overflow: ellipsis;

display: -webkit-box;

-webkit-line-clamp: 2;

overflow:hidden;

/*! autoprefixer: off */

-webkit-box-orient: vertical;

}
.tag text{
  color: rgb(201, 78, 78);
  padding:2rpx 6rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  background-color: rgb(248, 197, 167);
}
.overtag text{
  color: #333;
  background-color: rgb(204, 203, 203);
}
.li .waitTime{
  font-size: 26rpx;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  align-items: center;
}
.li .timeCss{
  color: rgb(212, 85, 85) !important;
  height: 177rpx;

}