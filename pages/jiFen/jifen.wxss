/* //进度条，加水滴 */
#progress{
  width: 500rpx;
  height: 25rpx;
  border:1px solid #ccc;
  border-radius: 30rpx;
  overflow: hidden;
}          
#progress view {
  width: 100%;
  height: 100%;
  background: #7db9e8 ;    
  text-align: center;
  color:#fff;
  animation:load 60s ease-in infinite;
}
@keyframes load{
  0%{
      width: 0%;
  }
  100%{
      width:100%;
  }
}