}
.waterNum{
  position: absolute;
  bottom: 0rpx;width: 100%;
  text-align: center;
}
.line1 .btn{
  background-color: yellow;
  text-align: center;
  margin: 10rpx 4rpx 0;
  border-radius: 10rpx;
}
.line1 .waitDay{
  color: #333;
  background-color: transparent;
}
.line2{
  display: flex;
  border-top: 2rpx solid #f5f5f5;
  padding-top: 10rpx;
}
.line2 image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.line2 .centerText{
  flex: 1;
  margin: 0 20rpx;
}
.showGet{
  border-radius: 60rpx 60rpx 0 0;
  overflow: hidden  ;
  background: rgb(164, 209, 138) !important;
}










.doing{
  -webkit-animation: translate-style 1.2s linear;
}

@-webkit-keyframes translate-style {
  0% {
      transform: translateX(0);
  }
  /* 33% {
      transform: translate(-200rpx,0);
  } */
  60% {
      transform: translate(-200rpx,-650rpx) rotate(-45deg);
  }
  80% {
    transform: translate(-340rpx,-650rpx) rotate(-45deg);
  }
  100% {
    transform: translate(-120rpx,-650rpx) rotate(-45deg);
  }
}
view{
  color: rgb(155, 56, 56);
}
.porgressBox{
  
  display: flex;
  align-items: center;
}
/* //进度条，加水滴 */
#progress{
  width: 500rpx;
  height: 25rpx;
  border:1px solid #ccc;
  border-radius: 30rpx;
  overflow: hidden;
}          
#progress view {
  width: 100%;
  height: 100%;
  background: #7db9e8 ;    
  text-align: center;
  color:#fff;
  animation:load 60s ease-in infinite;
}
@keyframes load{
  0%{
      width: 0%;
  }
  100%{
      width:100%;
  }
}