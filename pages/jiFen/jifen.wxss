.line1{
  display: flex;
  justify-content: space-around;
  margin:  0 0 20rpx;

}
/* 5天签到样式 */
.tip{
  text-align: center;
  color: #333;
  margin: 20rpx 0;
  font-size: 30rpx;
}
.line1 .day{
  width: 120rpx;
  /* background-color: green; */
  color: #000;
  margin: 0 10rpx;
}
.waterBgBox{
  width: 100%;
  height: 150rpx;
position: relative;
}
.waterBg{
  width: 100%;
